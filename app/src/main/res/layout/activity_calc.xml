<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.run.coolcalc.CalcActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fe0050">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="633"
                android:id="@+id/resultTxt"
                android:textSize="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="50dp"
                android:gravity="center_vertical|right"
                android:paddingBottom="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ff005e"
            android:weightSum="4">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="7"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="8"
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="9"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/divideBtn"
                android:src="@drawable/divide"
                android:layout_weight="1"
                android:background="#00ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ff005e"
            android:weightSum="4">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="4"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="6"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/multipyBtn"
                android:src="@drawable/multiply"
                android:layout_weight="1"
                android:background="#00ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ff005e"
            android:weightSum="4">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="1"
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/substractBtn"
                android:src="@drawable/subtract"
                android:layout_weight="1"
                android:background="#00ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ff005e">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="CLEAR"
                android:id="@+id/clearBtn"
                android:layout_weight="0.6666666"
                android:background="#d9005a"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/btn0"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:textSize="30dp"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/plusBtn"
                android:src="@drawable/add"
                android:layout_weight="1"
                android:background="#00ffffff" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equalBtn"
        android:src="@drawable/equal"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="105dp"
        android:paddingRight="50dp"
        android:adjustViewBounds="false" />
</RelativeLayout>
